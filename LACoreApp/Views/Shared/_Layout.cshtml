@using LACoreApp.Utilities.Common
@using Microsoft.AspNetCore.Http.Extensions
@using Microsoft.AspNetCore.Localization
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic page needs -->
    <meta charset="utf-8">
    <!--[if IE]>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <![endif]-->
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    @if (ViewData["amphtml"] != null)
    {
        <link rel="amphtml" href="@ViewData["amphtml"]">
    }
    <meta name="description" content="@ViewData["MetaKeyword"]">
    <meta name="keywords" content="@ViewData["MetaDescription"]" />
    <meta content="nguyenthuylinh.net" name="GENERATOR" />
    <meta content="Nguyen Thi Thuy Linh" name="author" />
    <meta content="text/javascript" http-equiv="Content-Script-Type" />
    <meta content="vi" http-equiv="content-language" />
    <meta name="robots" content="INDEX, FOLLOW" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="alternate" href="@ConfigurationManager.GetUrlRoot()" hreflang="vi-vn" />

    <!-- Open Graph data -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="@ViewData["Title"]" />
    <meta property="og:description" content="@ViewData["MetaDescription"]" />
    <meta property="og:type" content="article" />
    <meta property="og:image" content="@ViewData["MetaImage"]" />
    <meta property="og:url" content="@Url.Action()" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" value="summary">
    <meta name="twitter:site" content="@ConfigurationManager.GetUrlRoot()">
    <meta name="twitter:title" content="@ViewData["Title"]">
    <meta name="twitter:description" content="@ViewData["MetaDescription"]">
    <meta name="twitter:creator" content="Nguyen Thi Thuy Linh">
    <meta name="twitter:image" content="@ViewData["MetaImage"]">

    <!-- Favicons Icon -->
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico">

    <link href="~/lib/notifyjs/dist/styles/metro/notify-metro.css" rel="stylesheet" />
    <!-- CSS Style -->
    <link rel="stylesheet" href="~/client-side/style.css">
</head>

<body class="@ViewData["BodyClass"]">
    <partial name="_Header.cshtml" />
    @RenderBody()
    <partial name="_Footer.cshtml" />
    <!-- jquery js -->
    <script src="~/client-side/js/jquery.min.js"></script>
    <script src="~/client-side/js/jquery.smartmenus.js"></script>
    <!-- bootstrap js -->
    <script src="~/client-side/js/bootstrap.min.js"></script>
    <!-- owl.carousel.min js -->
    <script src="~/client-side/js/owl.carousel.js"></script>

    <script src="~/client-side/js/jquery.sticky.js"></script>
    <script src="~/client-side/js/fotorama.js"></script>
    <script src="~/client-side/js/wow.min.js"></script>
    <script src="~/client-side/js/call-option.js"></script>
    <script src="~/client-side/js/common.js"></script>

    <script src="~/lib/notifyjs/dist/notify.js"></script>
    <script src="~/lib/notifyjs/dist/styles/metro/notify-metro.js"></script>
    <script src="~/lib/mustache/mustache.js"></script>
    <script src="~/client-app/shared/localize/resources.@(requestCulture.RequestCulture.Culture.Name).js"></script>
    <script src="~/client-app/shared/tedu.js"></script>
    <script src="~/client-app/controllers/base/index.js"></script>

    <script>
        var baseObj = new BaseController();
        baseObj.initialize();
    </script>
    @if (ViewData["ArticleJson"] != null)
    {
        <script type="application/ld+json">
            @Html.Raw(ViewData["ArticleJson"])
        </script>
    }
    @if (ViewData["BreadCrumbJson"] != null)
    {
        <script type="application/ld+json">
            @Html.Raw(ViewData["BreadCrumbJson"])
        </script>
    }
    @if (ViewData["WebsiteJson"] != null)
    {
        <script type="application/ld+json">
            @Html.Raw(ViewData["WebsiteJson"])
        </script>
    }
    @RenderSection("Scripts", required: false)

</body>
</html>
